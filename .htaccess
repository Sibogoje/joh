# Journey of Hope - Cache Control Configuration

# Disable caching for development (remove or modify for production)
<IfModule mod_headers.c>
    # Prevent caching of HTML, PHP, and API files
    <FilesMatch "\.(html|htm|php|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Prevent caching of JavaScript and CSS during development
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Allow caching for images (can be cached for performance)
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|ico)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# Alternative method using mod_expires
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Set expiration for different file types
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/css "access plus 0 seconds"
    ExpiresByType application/javascript "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # Images can be cached for 1 hour
    ExpiresByType image/jpg "access plus 1 hour"
    ExpiresByType image/jpeg "access plus 1 hour"
    ExpiresByType image/png "access plus 1 hour"
    ExpiresByType image/gif "access plus 1 hour"
    ExpiresByType image/svg+xml "access plus 1 hour"
</IfModule>

# Security headers - Testing each one individually
<IfModule mod_headers.c>
    # Prevent clickjacking
    # Header always append X-Frame-Options SAMEORIGIN
    
    # XSS Protection
    # Header set X-XSS-Protection "1; mode=block"
    
    # Content type sniffing protection
    # Header set X-Content-Type-Options nosniff
    
    # Referrer policy
    # Header set Referrer-Policy "strict-origin-when-cross-origin"
